@import "{{ site.theme }}";

/* Custom styles */
.container {
  max-width: 1100px;
  margin: 0 auto;
  padding: 0 1rem;
}

.page-header {
  background-color: #159957;
  background-image: linear-gradient(120deg, #155799, #159957);
  padding: 3rem 1rem;
  text-align: center;
}

.main-content {
  padding: 2rem 0;
}

.site-footer {
  padding: 2rem 0;
  margin-top: 2rem;
  border-top: 1px solid #eee;
  text-align: center;
}

/* Documentation specific styles */
pre {
  background-color: #f8f8f8;
  border-radius: 3px;
  padding: 1rem;
  overflow: auto;
}

code {
  font-family: Consolas, Monaco, 'Andale Mono', monospace;
  background-color: rgba(0,0,0,0.04);
  border-radius: 3px;
  padding: 0.2em 0.4em;
}

table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 1rem;
}

th, td {
  border: 1px solid #e9ebec;
  padding: 0.5rem;
}

th {
  background-color: #f2f2f2;
  text-align: left;
}

.navigation {
  margin-bottom: 2rem;
}

.navigation ul {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
}

.navigation li {
  margin: 0;
}